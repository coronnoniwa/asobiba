<%# CSS・・・assets/stylesheets/shared/header_first.css %>
<header>
<div class='top-page-header'>
  <div class='asobiba'>
    <%= link_to 'asobiba', "/" , class: "asobiba-link" %>
  </div>
  <div class='nav'>
    <ul class='lists-right'>
        <li><%= link_to 'asobiba一覧', "#", class: "room-view" %></li>
      <% if user_signed_in? %>
        <li><%= link_to 'New施設', "#", class: "new-facility" %></li>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</div>
</header>